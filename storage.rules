
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regla para los avatares: permite la lectura a todos y la escritura solo al propietario
    match /avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
