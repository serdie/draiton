rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isValidImage() {
      return request.resource.contentType.matches('image/.*');
    }

    function isValidSize(maxBytes) {
      return request.resource.size <= maxBytes;
    }

    // ================================================================
    // AVATARS DE USUARIO
    // ================================================================
    match /avatars/{userId}/{allPaths=**} {
      // Lectura: cualquiera puede ver avatares (son públicos)
      allow read;
      
      // Escritura: solo el propietario
      allow write: if isAuthenticated() && 
                      isOwner(userId) && 
                      isValidImage() && 
                      isValidSize(5 * 1024 * 1024); // 5MB máximo
    }

    // ================================================================
    // LOGOS DE EMPRESA
    // ================================================================
    match /company-logos/{userId}/{allPaths=**} {
      // Lectura: cualquiera puede ver logos
      allow read;
      
      // Escritura: solo el propietario
      allow write: if isAuthenticated() && 
                      isOwner(userId) && 
                      isValidImage() && 
                      isValidSize(10 * 1024 * 1024); // 10MB máximo
    }

    // ================================================================
    // DOCUMENTOS (facturas, recibos, etc.)
    // ================================================================
    match /documents/{userId}/{allPaths=**} {
      // Lectura: solo el propietario
      allow read: if isAuthenticated() && isOwner(userId);
      
      // Escritura: solo el propietario
      allow write: if isAuthenticated() && 
                      isOwner(userId) && 
                      request.resource.contentType.matches('application/(pdf|vnd.ms-excel|vnd.openxmlformats-officedocument).*') &&
                      isValidSize(50 * 1024 * 1024); // 50MB para documentos
    }

    // ================================================================
    // PROTECCIÓN POR DEFECTO: RECHAZAR TODO LO DEMÁS
    // ================================================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
