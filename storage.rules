rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Regla para avatares: solo el usuario dueño puede escribir en su carpeta.
    match /avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Regla para logos de empresa: solo el usuario dueño puede escribir en su carpeta.
    match /company-logos/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
