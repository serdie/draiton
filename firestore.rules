
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Los usuarios pueden leer y escribir en su propio documento
    match /users/{userId} {
      allow read, update: if isOwner(userId);
    }
    
    // Los usuarios pueden crear, leer, actualizar y borrar sus propios proyectos
    match /projects/{projectId} {
        allow read, write: if isOwner(request.resource.data.ownerId);
    }
    
    // Los usuarios pueden gestionar sus propias tareas
    match /tasks/{taskId} {
      allow read, write: if isOwner(request.resource.data.ownerId);
    }

    // Los usuarios pueden gestionar sus propios contactos
    match /contacts/{contactId} {
        allow read, write: if isOwner(request.resource.data.ownerId);
    }

    // Los usuarios pueden gestionar sus propios documentos (facturas, etc)
    match /invoices/{invoiceId} {
        allow read, write: if isOwner(request.resource.data.ownerId);
    }
    
    // Los usuarios pueden gestionar sus propios gastos
    match /expenses/{expenseId} {
        allow read, write: if isOwner(request.resource.data.ownerId);
    }
  }
}
