rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function
    function isOwner(resource) {
      return request.auth.uid == resource.data.ownerId;
    }
    
    function isCompanyOwner(resource) {
      return request.auth.uid == resource.data.companyOwnerId;
    }

    // Users can only read and update their own profile. Admins can do anything.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      // Allow authenticated users to read user list for assigning tasks
      allow list: if request.auth != null;
      allow create, delete: if false;
    }

    // Projects: Only owners can manage.
    match /projects/{projectId} {
      allow create: if request.resource.data.ownerId == request.auth.uid;
      allow read, update, delete: if isOwner(get(path));
      // Allow composite queries for the dashboard
      allow list: if request.query.get("ownerId") == request.auth.uid;
    }

    // Tasks: Only owners can manage.
    match /tasks/{taskId} {
      allow create: if request.resource.data.ownerId == request.auth.uid;
      allow read, update, delete: if isOwner(get(path));
    }

    // Invoices: Only owners can manage.
    match /invoices/{invoiceId} {
      allow create: if request.resource.data.ownerId == request.auth.uid;
      allow read, update, delete: if isOwner(get(path));
    }
    
    // Expenses: Only owners can manage.
    match /expenses/{expenseId} {
        allow create: if request.resource.data.ownerId == request.auth.uid;
        allow read, update, delete: if isOwner(get(path));
    }

    // Contacts: Only owners can manage.
    match /contacts/{contactId} {
      allow create: if request.resource.data.ownerId == request.auth.uid;
      allow read, update, delete: if isOwner(get(path));
    }
    
    // Employees: Only the company owner can manage. Employee can read their own data.
    match /employees/{employeeId} {
        allow read: if request.auth.uid == employeeId || isCompanyOwner(get(path));
        allow create, update, delete: if isCompanyOwner(get(path));
    }
    
    // Clock-in/out: Company owner can read all, employee can read their own and create new ones for themselves.
    match /fichajes/{fichajeId} {
        allow read: if isOwner(get(path)) || request.auth.uid == get(path).data.employeeId;
        allow create: if request.resource.data.employeeId == request.auth.uid;
    }

    // Payrolls: Company owner can manage, employee can read their own.
    match /payrolls/{payrollId} {
        allow read: if isOwner(get(path)) || request.auth.uid == get(path).data.employeeId;
        allow create: if request.resource.data.ownerId == request.auth.uid;
        allow update, delete: if isOwner(get(path));
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
