rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can read/update their own profile, and can be created during signup.
    // Authenticated users can read other users' basic info for assignments etc.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if request.auth != null;
      allow list: if request.auth != null; // Allows fetching users for dropdowns
    }

    // Projects: CUD by the owner.
    match /projects/{projectId} {
      allow read, write: if isOwner(request.resource.data.ownerId) || isOwner(resource.data.ownerId);
    }
    
    // Tasks: CUD by the owner.
    match /tasks/{taskId} {
      allow read, write: if isOwner(request.resource.data.ownerId) || isOwner(resource.data.ownerId);
    }
    
    // Invoices (and other documents): CUD by the owner.
    match /invoices/{invoiceId} {
      allow read, write: if isOwner(request.resource.data.ownerId) || isOwner(resource.data.ownerId);
    }
    
    // Expenses: CUD by the owner.
    match /expenses/{expenseId} {
      allow read, write: if isOwner(request.resource.data.ownerId) || isOwner(resource.data.ownerId);
    }
    
    // Contacts: CUD by the owner.
    match /contacts/{contactId} {
      allow read, write: if isOwner(request.resource.data.ownerId) || isOwner(resource.data.ownerId);
    }

    // Employees: CUD by the company owner. Readable by self or company owner.
    match /employees/{employeeId} {
      allow read: if isOwner(employeeId) || isOwner(resource.data.companyOwnerId);
      allow write: if isOwner(request.resource.data.companyOwnerId) || isOwner(resource.data.companyOwnerId);
    }

    // Fichajes: Writable by employee or company owner. Readable by company owner or self.
    match /fichajes/{fichajeId} {
      allow read: if isOwner(resource.data.employeeId) || isOwner(resource.data.ownerId);
      allow create: if isOwner(request.resource.data.employeeId) || isOwner(request.resource.data.ownerId);
      allow update, delete: if isOwner(resource.data.ownerId);
    }
    
    // Payrolls: CUD by the company owner. Readable by company owner or the specific employee.
    match /payrolls/{payrollId} {
       allow read: if isOwner(resource.data.employeeId) || isOwner(resource.data.ownerId);
       allow create: if isOwner(request.resource.data.ownerId);
       allow update, delete: if isOwner(resource.data.ownerId);
    }
  }
}
