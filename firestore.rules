rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Funciones de Ayuda ---
    
    // Devuelve verdadero si el usuario que hace la petición es el dueño del recurso
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Devuelve verdadero si el usuario es el dueño del proyecto
    // al que pertenece un documento (ej. una tarea)
    function isProjectOwner(projectId) {
      return isOwner(get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId);
    }

    // Devuelve verdadero si el usuario tiene el rol de 'admin'
    function isAdmin() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- Reglas para Colecciones ---

    // Colección de Usuarios
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
    }
    
    // Colección de Proyectos
    match /projects/{projectId} {
      allow get, update, delete: if isOwner(resource.data.ownerId);
      allow list: if isOwner(request.resource.data.ownerId) || isAdmin();
      allow create: if isOwner(request.resource.data.ownerId);
    }
    
    // Colección de Tareas (vinculadas a un proyecto)
    match /tasks/{taskId} {
      allow get, update, delete: if isProjectOwner(resource.data.projectId);
      allow list: if isProjectOwner(request.resource.data.projectId);
      allow create: if isProjectOwner(request.resource.data.projectId);
    }

    // Colección de Documentos (Facturas, Presupuestos, etc.)
    match /invoices/{invoiceId} {
      allow get, update, delete: if isOwner(resource.data.ownerId);
      allow list: if isOwner(request.resource.data.ownerId);
      allow create: if isOwner(request.resource.data.ownerId);
    }

    // Colección de Gastos
    match /expenses/{expenseId} {
      allow get, update, delete: if isOwner(resource.data.ownerId);
      allow list: if isOwner(request.resource.data.ownerId);
      allow create: if isOwner(request.resource.data.ownerId);
    }

    // Colección de Contactos
    match /contacts/{contactId} {
      allow get, update, delete: if isOwner(resource.data.ownerId);
      allow list: if isOwner(request.resource.data.ownerId);
      allow create: if isOwner(request.resource.data.ownerId);
    }
  }
}
