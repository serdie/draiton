rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(ownerId) {
      return request.auth != null && request.auth.uid == ownerId;
    }

    // Users can only read and update their own profile.
    // User documents are created server-side or on signup.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Generic rule for collections where documents have an ownerId field.
    // Users can do anything with documents they own.
    match /{collection}/{docId} {
      allow read, write: if request.auth != null && isOwner(request.resource.data.ownerId);
    }
    
    // Specific rule for employees, who are owned by a company.
    match /employees/{employeeId} {
        allow read, write: if request.auth != null && isOwner(request.resource.data.companyOwnerId);
    }

    // Fichajes can be created by the employee, but read by the owner.
    match /fichajes/{fichajeId} {
        allow create: if request.auth != null && isOwner(request.resource.data.employeeId);
        allow read, update, delete: if request.auth != null && isOwner(get(/databases/$(database)/documents/employees/$(request.resource.data.employeeId)).data.companyOwnerId);
    }
    
    // Payrolls can be read by the employee, but created/managed by the owner.
    match /payrolls/{payrollId} {
      allow read: if request.auth != null && isOwner(resource.data.employeeId);
      allow create, update, delete: if request.auth != null && isOwner(resource.data.ownerId);
    }
  }
}
