
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regla para la colección de usuarios
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Reglas para colecciones propiedad del usuario
    function isOwner(collectionName) {
      return get(/databases/$(database)/documents/$(collectionName)/$(request.resource.id)).data.ownerId == request.auth.uid;
    }
    
    // Proyectos
    match /projects/{projectId} {
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow read, update, delete: if resource.data.ownerId == request.auth.uid;
    }

    // Tareas
    match /tasks/{taskId} {
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow read, update, delete: if resource.data.ownerId == request.auth.uid || resource.data.assigneeId == request.auth.uid;
    }

    // Facturas y otros documentos
    match /invoices/{invoiceId} {
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow read, update, delete: if resource.data.ownerId == request.auth.uid;
    }
    
    // Gastos
    match /expenses/{expenseId} {
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow read, update, delete: if resource.data.ownerId == request.auth.uid;
    }

    // Contactos
    match /contacts/{contactId} {
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow read, update, delete: if resource.data.ownerId == request.auth.uid;
    }

    // Empleados
    match /employees/{employeeId} {
      // El dueño de la empresa puede gestionar a sus empleados.
      // Un empleado puede leer sus propios datos.
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow read: if resource.data.ownerId == request.auth.uid || request.auth.uid == employeeId;
      allow update, delete: if resource.data.ownerId == request.auth.uid;
    }

    // Fichajes (Control Horario)
    match /fichajes/{fichajeId} {
        // El dueño puede leer todos los fichajes de su empresa.
        // El empleado puede crear sus propios fichajes y leerlos.
        allow create: if request.auth.uid == request.resource.data.employeeId;
        allow read: if (resource.data.ownerId == request.auth.uid) || (resource.data.employeeId == request.auth.uid);
    }

    // Nóminas
    match /payrolls/{payrollId} {
        // El dueño puede crear y gestionar las nóminas.
        // El empleado puede leer sus propias nóminas.
        allow create: if request.auth.uid == request.resource.data.ownerId;
        allow read, delete: if resource.data.ownerId == request.auth.uid || request.auth.uid == resource.data.employeeId;
    }
    
  }
}
