rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isEmpresa() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'empresa';
    }

    function isEmployee(employeeId) {
        let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
        return userDoc.data.role == 'employee' && request.auth.uid == employeeId;
    }

    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || isAdmin();
      allow create: if !isAuthenticated() || isOwner(userId);
      allow list: if isAdmin();
    }
    
    match /invoices/{invoiceId} {
      allow read, write: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      allow create: if isAuthenticated();
    }

    match /expenses/{expenseId} {
        allow read, write: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
        allow create: if isAuthenticated();
    }

    match /contacts/{contactId} {
        allow read, write, delete: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
        allow create: if isAuthenticated();
    }

    match /projects/{projectId} {
        allow read, write, delete: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
        allow create: if isAuthenticated();
    }

    match /tasks/{taskId} {
        allow read, write, delete: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
        allow create: if isAuthenticated();
    }

    match /employees/{employeeId} {
        // Un usuario puede leer un documento de empleado si es el dueño de la empresa o el propio empleado.
        allow read: if (isOwner(resource.data.ownerId) || isOwner(resource.data.userId));
        // El dueño de la empresa (o un admin) puede crear, actualizar y borrar empleados.
        allow write: if (isOwner(request.resource.data.ownerId) && (isEmpresa() || isAdmin()));

        // Un usuario puede listar empleados SIEMPRE Y CUANDO la consulta filtre por su ownerId.
        // Esto asegura que una empresa solo pueda ver sus propios empleados.
        allow list: if isAuthenticated() && request.query.resource.data.ownerId == request.auth.uid;
    }
  }
}
