rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isUserProfileOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isDocumentOwner(docId, collectionName) {
      return get(/databases/$(database)/documents/$(collectionName)/$(docId)).data.ownerId == request.auth.uid;
    }

    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      return getUserRole(request.auth.uid) == 'admin';
    }

    match /users/{userId} {
      // Un usuario puede leer su propio perfil o si es admin.
      allow read: if isUserAuthenticated() && (isUserProfileOwner(userId) || isAdmin());
      // Un usuario puede crear su propio perfil.
      allow create: if isUserAuthenticated();
      // Un usuario puede actualizar su propio perfil o si es admin.
      allow update: if isUser.authenticated() && (isUserProfileOwner(userId) || isAdmin());
    }

    match /invoices/{invoiceId} {
      allow read, write: if isUserAuthenticated() && isDocumentOwner(invoiceId, 'invoices');
    }

    match /expenses/{expenseId} {
      allow read, write: if isUserAuthenticated() && isDocumentOwner(expenseId, 'expenses');
    }
    
    match /contacts/{contactId} {
        allow read, write: if isUserAuthenticated() && isDocumentOwner(contactId, 'contacts');
    }

    match /projects/{projectId} {
        allow read, write: if isUserAuthenticated() && isDocumentOwner(projectId, 'projects');
    }

    match /tasks/{taskId} {
        allow read, write: if isUserAuthenticated() && isDocumentOwner(taskId, 'tasks');
    }

    match /employees/{employeeId} {
      allow list: if isUserAuthenticated() && (request.query.limit <= 100 && request.query.filters[0][2] == request.auth.uid);
      allow get: if isUserAuthenticated() && (resource.data.ownerId == request.auth.uid || resource.data.userId == request.auth.uid);
      allow create: if isUserAuthenticated() && (getUserRole(request.auth.uid) == 'empresa' || isAdmin());
      allow update, delete: if isUserAuthenticated() && resource.data.ownerId == request.auth.uid;
    }
    
     match /payrolls/{payrollId} {
      allow read, write: if isUserAuthenticated() && isDocumentOwner(payrollId, 'payrolls');
    }
  }
}
