
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership of an existing resource.
    function isResourceOwner() {
      return request.auth != null && request.auth.uid == resource.data.ownerId;
    }

    // Helper function to check if the user is an employee of the company that owns the resource.
    function isEmployeeOfResourceOwner() {
       return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyOwnerId == resource.data.ownerId;
    }

    // --- User Profiles ---
    // A user can create their own profile.
    // A user can only read or update their own profile.
    match /users/{userId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // --- Owner-based Collections ---

    // Projects
    match /projects/{projectId} {
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow read, update, delete: if isResourceOwner();
      allow list: if request.auth != null && request.query.where.ownerId == request.auth.uid;
    }

    // Tasks
    match /tasks/{taskId} {
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow read, update, delete: if isResourceOwner() || (resource.data.assigneeId == request.auth.uid);
      allow list: if request.auth != null && (request.query.where.ownerId == request.auth.uid || request.query.where.assigneeId == request.auth.uid);
    }

    // Invoices and other documents
    match /invoices/{invoiceId} {
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow read, update, delete: if isResourceOwner();
      allow list: if request.auth != null && request.query.where.ownerId == request.auth.uid;
    }
    
    // Expenses
    match /expenses/{expenseId} {
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow read, update, delete: if isResourceOwner();
      allow list: if request.auth != null && request.query.where.ownerId == request.auth.uid;
    }

    // Contacts
    match /contacts/{contactId} {
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow read, update, delete: if isResourceOwner();
      allow list: if request.auth != null && request.query.where.ownerId == request.auth.uid;
    }

    // Employees
    match /employees/{employeeId} {
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow read: if isResourceOwner() || request.auth.uid == employeeId;
      allow update, delete: if isResourceOwner();
      allow list: if request.auth != null && request.query.where.ownerId == request.auth.uid;
    }

    // Time Clocking (Fichajes)
    match /fichajes/{fichajeId} {
        allow create: if request.auth.uid == request.resource.data.employeeId;
        allow read: if isResourceOwner() || request.auth.uid == resource.data.employeeId;
        allow update: if request.auth.uid == resource.data.employeeId || isResourceOwner();
        allow list: if request.auth != null && (request.query.where.ownerId == request.auth.uid || request.query.where.employeeId == request.auth.uid);
    }
    
    // Absences
    match /absences/{absenceId} {
      allow create: if request.auth.uid == request.resource.data.employeeId; // An employee creates their own absence request
      allow read: if isResourceOwner() || request.auth.uid == resource.data.employeeId;
      allow update, delete: if isResourceOwner();
      allow list: if request.auth != null && (request.query.where.ownerId == request.auth.uid || request.query.where.employeeId == request.auth.uid);
    }
    
    // Notifications
    match /notifications/{notificationId} {
      allow create: if request.auth != null;
      allow read, write: if request.auth != null && resource.data.recipientId == request.auth.uid;
      allow list: if request.auth != null && request.query.where.recipientId == request.auth.uid;
    }

    // Payrolls
    match /payrolls/{payrollId} {
        allow create: if request.auth.uid == request.resource.data.ownerId;
        allow read, delete: if isResourceOwner() || request.auth.uid == resource.data.employeeId;
        allow list: if request.auth != null && (request.query.where.ownerId == request.auth.uid || request.query.where.employeeId == request.auth.uid);
    }
  }
}
