/**
 * @fileoverview Firestore Security Rules for Prototyping.
 *
 * Core Philosophy:
 * This ruleset prioritizes strict user-ownership and authenticated access while relaxing data shape validation. It focuses on securing data based on user identity and relationships, but allows for flexible data structures to accelerate prototyping.
 *
 * Data Structure:
 * - User profiles are stored under `/users/{userId}`.
 * - Projects, Tasks, Invoices, Expenses, and Contacts are stored in top-level collections.
 * - Ownership is enforced via the `ownerId` field.
 *
 * Key Security Decisions:
 * - User listing is disabled to protect privacy.
 * - All write operations require authentication.
 * - Data validation is minimized to essential authorization checks, focusing on ownership and relationship integrity.
 *
 * Denormalization for Authorization:
 * - Documents in top-level collections MUST include an `ownerId` field to enable simple ownership checks.
 *
 * Structural Segregation:
 * - No private subcollections are employed in this ruleset.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Root-level authentication check. All requests require an authenticated user.
     * @path /databases/{database}/documents
     * @allow (read, write) Authenticated users only.
     * @deny (read, write) Unauthenticated users.
     * @principle Requires authentication for all access.
     */
    match /{document=**} {
      allow read, write: if isSignedIn();
    }

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (get) Any authenticated user can read a user profile.
     * @allow (list) Listing all users is denied to protect user privacy.
     * @allow (create) A user can create their own profile if the UID matches.
     * @allow (update) A user can update their own profile.
     * @allow (delete) A user can delete their own profile.
     * @deny (create) Creating a profile with a mismatched UID.
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if false;

      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to project documents.
     * @path /projects/{projectId}
     * @allow (get, list) Any authenticated user can read the project.
     * @allow (create) Only the owner can create a project, and the ownerId must match the authenticated user's UID.
     * @allow (update, delete) Only the owner can update or delete the project.
     * @principle Enforces document ownership for writes, allows public reads.
     */
    match /projects/{projectId} {
      allow get, list: if true;

      allow create: if request.resource.data.ownerId == request.auth.uid;
      allow update: if isExistingOwner(resource.data.ownerId);
      allow delete: if isExistingOwner(resource.data.ownerId);
    }

    /**
     * @description Controls access to task documents.
     * @path /tasks/{taskId}
     * @allow (get, list) Any authenticated user can read the task.
     * @allow (create) Only the owner can create a task, and the ownerId must match the authenticated user's UID.
     * @allow (update, delete) Only the owner can update or delete the task.
     * @principle Enforces document ownership for writes, allows public reads.
     */
    match /tasks/{taskId} {
      allow get, list: if true;

      allow create: if request.resource.data.ownerId == request.auth.uid;
      allow update: if isExistingOwner(resource.data.ownerId);
      allow delete: if isExistingOwner(resource.data.ownerId);
    }

    /**
     * @description Controls access to invoice documents.
     * @path /invoices/{invoiceId}
     * @allow (get, list) Any authenticated user can read the invoice.
     * @allow (create) Only the owner can create an invoice, and the ownerId must match the authenticated user's UID.
     * @allow (update, delete) Only the owner can update or delete the invoice.
     * @principle Enforces document ownership for writes, allows public reads.
     */
    match /invoices/{invoiceId} {
      allow get, list: if true;

      allow create: if request.resource.data.ownerId == request.auth.uid;
      allow update: if isExistingOwner(resource.data.ownerId);
      allow delete: if isExistingOwner(resource.data.ownerId);
    }

    /**
     * @description Controls access to expense documents.
     * @path /expenses/{expenseId}
     * @allow (get, list) Any authenticated user can read the expense.
     * @allow (create) Only the owner can create an expense, and the ownerId must match the authenticated user's UID.
     * @allow (update, delete) Only the owner can update or delete the expense.
     * @principle Enforces document ownership for writes, allows public reads.
     */
    match /expenses/{expenseId} {
      allow get, list: if true;

      allow create: if request.resource.data.ownerId == request.auth.uid;
      allow update: if isExistingOwner(resource.data.ownerId);
      allow delete: if isExistingOwner(resource.data.ownerId);
    }

    /**
     * @description Controls access to contact documents.
     * @path /contacts/{contactId}
     * @allow (get, list) Any authenticated user can read the contact.
     * @allow (create) Only the owner can create a contact, and the ownerId must match the authenticated user's UID.
     * @allow (update, delete) Only the owner can update or delete the contact.
     * @principle Enforces document ownership for writes, allows public reads.
     */
    match /contacts/{contactId} {
      allow get, list: if true;

      allow create: if request.resource.data.ownerId == request.auth.uid;
      allow update: if isExistingOwner(resource.data.ownerId);
      allow delete: if isExistingOwner(resource.data.ownerId);
    }

    /**
     * @description Controls access to employee documents.
     * @path /employees/{employeeId}
     * @allow (get, list) Authenticated users whose UID matches the employee's companyId field can read.
     * @allow (create, update, delete) Only the company owner (matching companyId) can write/delete employee data.
     * @principle Enforces company ownership for reading and writing employee data.
     */
    match /employees/{employeeId} {
      // Función helper para verificar si el usuario logueado es el dueño de la empresa de este empleado
      function isCompanyOwner() {
        // resource.data accede a los campos del documento que se está intentando leer/escribir
        return request.auth != null && request.auth.uid == resource.data.companyId;
      }
      
      // Función helper para verificar si el usuario va a ser el dueño al crear
      function isCreatingOwner() {
         return request.auth != null && request.auth.uid == request.resource.data.companyId;
      }

      // PERMISOS DE LECTURA:
      // Permite leer un empleado específico (get) o la lista (list)
      // SI el usuario está autenticado Y su UID coincide con el companyId del empleado
      allow get, list: if request.auth != null && request.auth.uid == resource.data.companyId;
                          // Alternativa si quieres que CUALQUIER usuario de empresa lea a CUALQUIER empleado:
                          // allow get, list: if request.auth != null && request.auth.token.role == 'empresa';

      // PERMISOS DE ESCRITURA:
      // Permite crear un empleado SI el usuario logueado va a ser el companyId
      allow create: if isCreatingOwner();
      // Permite actualizar o borrar SI el usuario logueado es el companyId del empleado existente
      allow update, delete: if isCompanyOwner();
    }

  }

  // Helper Functions
  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(userId) {
    return request.auth.uid == userId;
  }

  function isExistingOwner(ownerId) {
    return isSignedIn() && request.auth.uid == ownerId && resource != null;
  }
}