
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can read their own data.
    // Admins can read all user data.
    // Users can only create their own user document.
    // Users can update their own data.
    match /users/{userId} {
      allow read: if isOwner(userId) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      // Deleting user documents from the client is generally disallowed for safety.
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Generic rule for user-owned content
    match /{collection}/{docId} {
      allow read, update, delete: if resource.data.ownerId == request.auth.uid;
      allow create: if request.resource.data.ownerId == request.auth.uid;
    }

    // Specific rules for collections to ensure ownerId is checked
    match /invoices/{invoiceId} {
        allow read, write: if isOwner(request.resource.data.ownerId);
    }
    
    match /expenses/{expenseId} {
        allow read, write: if isOwner(request.resource.data.ownerId);
    }

    match /contacts/{contactId} {
        allow read, write: if isOwner(request.resource.data.ownerId);
    }

    match /projects/{projectId} {
        allow read, write: if isOwner(request.resource.data.ownerId);
    }
    
    match /tasks/{taskId} {
        allow read, write: if isOwner(request.resource.data.ownerId);
    }
    
    match /employees/{employeeId} {
        allow read, write: if isOwner(request.resource.data.ownerId);
    }

    match /payrolls/{payrollId} {
        allow read, write: if isOwner(request.resource.data.ownerId);
    }
  }
}
