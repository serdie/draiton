    /**
     * @description Controls access to contacts data.
     * @path /contacts/{contactId}
     * @allow (get, create, update, delete) User with matching contact.ownerId can access contact data.
     * @deny (get, create, update, delete) User tries to access another user's contact.
     */
    match /contacts/{contactId} {
        function isSignedIn() {
            return request.auth != null;
        }
        function isOwner() {
          return request.auth.uid == resource.data.ownerId;
        }
        function isCreatingOwner() {
