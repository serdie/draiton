rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(resource) {
      return request.auth.uid == resource.data.ownerId;
    }

    function isProjectOwner(projectId) {
      return get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId == request.auth.uid;
    }

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Collection: users
    match /users/{userId} {
      // Un usuario puede leer su propio perfil.
      allow get: if isSignedIn() && request.auth.uid == userId;
      // Un usuario puede crear su propio perfil.
      allow create: if isSignedIn() && request.auth.uid == userId;
      // Un usuario puede actualizar su propio perfil.
      allow update: if isSignedIn() && request.auth.uid == userId;
      // Los administradores pueden leer y listar todos los perfiles de usuario.
      allow get, list: if isSignedIn() && isAdmin();
      // Nadie puede borrar usuarios desde el cliente.
      allow delete: if false;
    }

    // Collection: projects
    match /projects/{projectId} {
      allow get: if isSignedIn() && (isOwner(resource) || isAdmin());
      allow list: if isSignedIn() && (request.query.get('ownerId') == request.auth.uid || isAdmin());
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isSignedIn() && (isOwner(resource) || isAdmin());
    }

    // Collection: tasks
    match /tasks/{taskId} {
      allow get: if isSignedIn() && (isOwner(resource) || isAdmin());
      allow list: if isSignedIn() && (isProjectOwner(request.query.get('projectId')) || isAdmin());
      allow create: if isSignedIn() && isProjectOwner(request.resource.data.projectId);
      allow update, delete: if isSignedIn() && (isOwner(resource) || isAdmin());
    }

    // Collection: invoices (documentos)
    match /invoices/{invoiceId} {
      allow get: if isSignedIn() && (isOwner(resource) || isAdmin());
      allow list: if isSignedIn() && (request.query.get('ownerId') == request.auth.uid || isAdmin());
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isSignedIn() && (isOwner(resource) || isAdmin());
    }

    // Collection: expenses (gastos)
    match /expenses/{expenseId} {
       allow get: if isSignedIn() && (isOwner(resource) || isAdmin());
       allow list: if isSignedIn() && (request.query.get('ownerId') == request.auth.uid || isAdmin());
       allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
       allow update, delete: if isSignedIn() && (isOwner(resource) || isAdmin());
    }
    
    // Collection: contacts
    match /contacts/{contactId} {
       allow get: if isSignedIn() && (isOwner(resource) || isAdmin());
       allow list: if isSignedIn() && (request.query.get('ownerId') == request.auth.uid || isAdmin());
       allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
       allow update, delete: if isSignedIn() && (isOwner(resource) || isAdmin());
    }
  }
}
