
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can only read and update their own profile.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      // Allow authenticated users to read other users' basic info for assignment, but not sensitive data.
      allow list: if request.auth != null;
    }

    // Projects can only be managed by their owner.
    match /projects/{projectId} {
      allow read, write, delete, create: if isOwner(request.resource.data.ownerId);
      // Allow list for owner's projects
      allow list: if request.auth.uid == request.query.where.ownerId;
    }
    
    match /projects/{projectId} {
        allow list: if request.auth != null && request.query.where.clientPortalId == resource.data.clientPortalId && resource.data.clientPortalActive == true;
    }

    // Tasks can only be managed by their owner.
    match /tasks/{taskId} {
      allow read, write, delete, create: if isOwner(request.resource.data.ownerId);
       allow list: if request.auth.uid == request.query.where.ownerId;
    }
    
    // Invoices can only be managed by their owner.
    match /invoices/{invoiceId} {
      allow read, write, delete, create: if isOwner(request.resource.data.ownerId);
       allow list: if request.auth.uid == request.query.where.ownerId;
    }
    
    // Expenses can only be managed by their owner.
    match /expenses/{expenseId} {
      allow read, write, delete, create: if isOwner(request.resource.data.ownerId);
       allow list: if request.auth.uid == request.query.where.ownerId;
    }

    // Contacts can only be managed by their owner.
    match /contacts/{contactId} {
      allow read, write, delete, create: if isOwner(request.resource.data.ownerId);
      allow list: if request.auth.uid == request.query.where.ownerId;
    }
    
    // Employees can only be managed by the company owner.
    match /employees/{employeeId} {
      allow read, write, create, delete: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow list: if request.auth != null && request.query.where.ownerId == request.auth.uid;
    }

    // Clock-in/out records
    match /fichajes/{fichajeId} {
        // Employees can create their own records.
        allow create: if request.auth.uid == request.resource.data.employeeId;
        // The company owner or the employee themselves can read the records.
        allow read: if isOwner(request.resource.data.ownerId) || isOwner(request.resource.data.employeeId);
        allow list: if request.auth != null && (request.query.where.ownerId == request.auth.uid || request.query.where.employeeId == request.auth.uid);
    }
    
    // Payrolls
    match /payrolls/{payrollId} {
      allow create, read, write, delete: if isOwner(request.resource.data.ownerId);
      allow list: if request.auth != null && (request.query.where.ownerId == request.auth.uid || request.query.where.employeeId == request.auth.uid);
    }

    // Default deny rule: Deny access to all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
