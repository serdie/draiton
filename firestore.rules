
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regla para la colección de usuarios
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Reglas para colecciones propiedad del usuario
    function isOwner(collectionName) {
      return get(/databases/$(database)/documents/$(collectionName)/$(request.resource.id)).data.ownerId == request.auth.uid;
    }
    
    // Proyectos
    match /projects/{projectId} {
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow read, update, delete: if resource.data.ownerId == request.auth.uid;
    }

    // Tareas
    match /tasks/{taskId} {
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow read, update, delete: if resource.data.ownerId == request.auth.uid || resource.data.assigneeId == request.auth.uid;
    }

    // Facturas y otros documentos
    match /invoices/{invoiceId} {
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow read, update, delete: if resource.data.ownerId == request.auth.uid;
    }
    
    // Gastos
    match /expenses/{expenseId} {
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow read, update, delete: if resource.data.ownerId == request.auth.uid;
    }

    // Contactos
    match /contacts/{contactId} {
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow read, update, delete: if resource.data.ownerId == request.auth.uid;
    }

    // Empleados
    match /employees/{employeeId} {
      // El dueño de la empresa puede gestionar a sus empleados.
      // Un empleado puede leer sus propios datos.
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow read: if resource.data.ownerId == request.auth.uid || request.auth.uid == employeeId;
      allow update, delete: if resource.data.ownerId == request.auth.uid;
    }

    // Fichajes (Control Horario)
    match /fichajes/{fichajeId} {
        // Un empleado puede crear su propio fichaje.
        allow create: if request.auth.uid == request.resource.data.employeeId;
        // El dueño puede leer todos los fichajes de su empresa.
        // El empleado puede leer sus propios fichajes.
        allow read: if request.auth != null && (resource.data.ownerId == request.auth.uid || resource.data.employeeId == request.auth.uid);
        // Permite la consulta de fichajes por empleado o por empresa
        allow list: if request.auth != null && (request.query.where.ownerId == request.auth.uid || request.query.where.employeeId == request.auth.uid);
        // El empleado puede solicitar un cambio, el jefe puede aprobar/rechazar.
        allow update: if request.auth.uid == resource.data.employeeId || request.auth.uid == resource.data.ownerId;
    }
    
    // Ausencias (Vacaciones, Bajas, etc.)
    match /absences/{absenceId} {
      // El dueño puede crear, leer, actualizar y borrar las ausencias de su empresa.
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow read, update, delete: if request.auth.uid == resource.data.ownerId;
      // Permite al dueño de la empresa listar todas las ausencias ordenadas por fecha de inicio.
      allow list: if request.auth != null && request.query.where.ownerId == request.auth.uid;
    }
    
    // Notifications
    match /notifications/{notificationId} {
      // Un usuario solo puede leer y escribir sus propias notificaciones
      allow read, write: if request.auth != null && request.auth.uid == resource.data.recipientId;
      allow create: if request.auth != null;
      // Permite la consulta para obtener notificaciones por destinatario
      allow list: if request.auth != null && request.query.where.recipientId == request.auth.uid;
    }

    // Nóminas
    match /payrolls/{payrollId} {
        // El dueño puede crear y gestionar las nóminas.
        // El empleado puede leer sus propias nóminas.
        allow create: if request.auth.uid == request.resource.data.ownerId;
        allow read, delete: if resource.data.ownerId == request.auth.uid || request.auth.uid == resource.data.employeeId;
    }
    
  }
}
