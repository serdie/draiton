rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and update their own profile, but not delete it or create others.
    // Allow any authenticated user to read a user's public data (displayName, photoURL)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if isOwner(userId) && request.resource.data.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if false;
    }
    
    // Generic rule for collections where documents have an 'ownerId'
    // This applies to projects, tasks, invoices, expenses, contacts, employees, fichajes
    match /{collection}/{docId} {
        allow read, write: if request.auth != null && isOwner(request.resource.data.ownerId); // For create, update, delete
        allow read, write: if request.auth != null && isOwner(get(after docId).data.ownerId); // For read
    }

    // Specific rule for Projects to allow querying by status
    match /projects/{projectId} {
       allow read, write: if request.auth != null && isOwner(resource.data.ownerId);
    }
  }
}
