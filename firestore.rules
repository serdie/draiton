
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can manage their own user document
    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if request.auth.uid != null;
    }

    // Users can manage their own invoices
    match /invoices/{invoiceId} {
      allow read, write: if isOwner(request.resource.data.ownerId) || isOwner(resource.data.ownerId);
    }
    
    // Users can manage their own contacts
    match /contacts/{contactId} {
      allow read, write: if isOwner(request.resource.data.ownerId) || isOwner(resource.data.ownerId);
    }
    
    // Users can manage their own projects
    match /projects/{projectId} {
      allow read, write: if isOwner(request.resource.data.ownerId) || isOwner(resource.data.ownerId);
    }
    
    // Users can manage their own expenses
    match /expenses/{expenseId} {
      allow read, write: if isOwner(request.resource.data.ownerId) || isOwner(resource.data.ownerId);
    }
    
    // Users can manage their own tasks
    match /tasks/{taskId} {
      allow read, write: if isOwner(request.resource.data.ownerId) || isOwner(resource.data.ownerId);
    }
  }
}
